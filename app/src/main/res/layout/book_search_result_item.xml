<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="-4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="-3dp"
        android:layout_marginStart="-3dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_result_book_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_book_logo2"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="6dp"
                android:paddingEnd="2dp"
                android:paddingStart="4dp"
                android:paddingTop="6dp"
                android:textColor="@color/grey_800"
                android:textSize="18sp"
                tools:text="教程" />

            <TextView
                android:id="@+id/search_result_book_info_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="4dp"
                android:paddingEnd="2dp"
                android:paddingStart="32dp"
                android:textSize="15sp"
                tools:text="著       者：冯德明" />

            <TextView
                android:id="@+id/search_result_book_info1_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="4dp"
                android:paddingEnd="2dp"
                android:paddingStart="32dp"
                tools:text="出       版：清华大学出版社"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/search_result_book_info2_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="8dp"
                android:paddingEnd="2dp"
                android:paddingStart="32dp"
                android:textSize="15sp"
                tools:text="出版日期：1987.06"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
